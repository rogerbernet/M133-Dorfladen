<%- await include('views/header.ejs', { title: 'Home' }); %>

    <body>
        <style>
            .product {
                background-color: lightgreen;
                border-radius: 12px;
                border-style: hidden;
                float: left;
                margin: 20px;
                width: 200px;
            }

            body {
                background-color: greenyellow;
            }
        </style>
        <div style="position: absolute; float:right; width: 60px; background-color: greenyellow;">
            <form method="post" action="/cart">
                <button type="submit">Cart</button>
            </form>
        </div>
        <br>
        <div>
            <% console.log("home is loaded"); %>
                <% for (let i=0; i < items.length; i++) { %>
                    <form action="/product" method="post">
                        <input type="text" name="itemId" value="<%= i %>" hidden>
                        <button class="product" type="submit">
                            <img src="../assets/<%= items[i].imageName %>" height="120" width="120">
                            <br>
                            <%= items[i].productName %>
                                <br>
                                <a style="color: green">
                                    <%= items[i].specialOffer %>.-
                                </a>
                                <del style="color: darkred;">
                                    <%= items[i].normalPrice %>.-
                                </del>
                        </button>
                    </form>
                    <% } %>
        </div>
    </body>

    <%- await include('views/footer.ejs'); %>