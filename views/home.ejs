<%- await include('views/header.ejs', { title: 'Home' }); %>

    <body>
        <style>
            .product {
                background-color: lightgreen;
                border-radius: 12px;
                border-style: hidden;
                float: left;
                margin: 20px;
                width: 200px;
            }
            .cart{
                position: absolute; 
                float:right;
                width: 50px;
                height: 40px;
                background-color: #006600;
                border-radius: 26px;
                border: hidden;
                color: white;
                font: bold;
                margin-left: 20px;
            }

            body {
                background-color: #e6ffe6;
                
            }

        </style>
        <div>
            <form method="post" action="/cart">
                <button class="cart"type="submit">Cart</button>
            </form>
        </div>
        <br>
        <div>
            <% for (let i=0; i < items.length; i++) { %>
                <form action="/product" method="post">
                    <input type="text" name="itemId" value="<%= i %>" hidden>
                    <button class="product" type="submit">
                        <img src="../assets/<%= items[i].imageName %>" height="120" width="120">
                        <br>
                        <a style="font: bold;"><%= items[i].productName %></a>
                        <br>
                            <a style="color: green; font: bolt;">
                                <%= items[i].specialOffer %>.-
                            </a>
                            <del style="color: darkred; font: bolt;">
                                <%= items[i].normalPrice %>.-
                            </del>
                    </button>
                </form>
                <% } %>
        </div>
    </body>

    <%- await include('views/footer.ejs'); %>